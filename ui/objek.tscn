			get_meta(\"jalur_objek\"),
			server.permainan.pasang_objek,
			Vector3.ZERO,
			[
				[\"warna_1\", Color(randf(), randf(), randf(), 1)]
			]
		)
	server.permainan._tutup_daftar_objek()
	release_focus()
